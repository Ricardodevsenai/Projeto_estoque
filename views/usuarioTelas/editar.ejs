<%-include('../includes/header.ejs', {titulo:'Editando Usuario'})%>
<main>
    <h2> Editando Usuario</h2>

    <form
    action="/usuario/<%= usuarios.id_usuario%>/editar"
    method="POST"
    class="form"
  >
        <div class="form-group">
            <label for="nome"> Nome</label>
            <input type="text" id="nome" name="nome" value="<%= usuarios.nome %>"required>


        </div>
        <div class="form-group">
            <label for="usuario"> Usuario</label>
    <input type="text" id="usuarios" name="usuario" value="<%= usuarios.usuario %>"required>


        </div>
        <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" id="senha" name="senha" value="<%= usuarios.senha %>" required>

        </div>

        <button type="submit" class="btn" style="background-color: green; color: white;">Editar</button>
        <a href="/usuario" class="btn btn-secondary">Cancelar</a>
    </form>
</main>
<%- include('../includes/footer.ejs')%>